{
  "manifest_version": 3,
  "name": "Sales Coach AI",
  "version": "2.1.0",
  "description": "AI sales coach with real-time transcription, waveform visualization, proactive coaching, and meeting insights",
  "permissions": [
    "activeTab",
    "tabCapture",
    "storage",
    "offscreen",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://*.zoom.us/*",
        "https://teams.microsoft.com/*",
        "https://*.webex.com/*",
        "http://localhost/*",
        "http://127.0.0.1/*"
      ],
      "js": [
        "content/premium-sales-coach.js"
      ],
      "run_at": "document_idle",
      "type": "module"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "options_page": "options/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "components/*.js",
        "styles/*.css",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
