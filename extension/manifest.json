{
  "manifest_version": 3,
  "name": "Sales Coach AI",
  "version": "2.2.1",
  "description": "AI sales coach with real-time transcription, waveform visualization, proactive coaching, and meeting insights",
  "permissions": [
    "activeTab",
    "tabCapture",
    "storage",
    "offscreen",
    "scripting",
    "identity"
  ],
  "oauth2": {
    "client_id": "1051177449208-2dvpubk33tr2li0us1it183b7ncufmch.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile",
      "https://www.googleapis.com/auth/calendar.readonly"
    ]
  },
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://*.zoom.us/*",
        "https://teams.microsoft.com/*",
        "https://*.webex.com/*",
        "http://localhost/*",
        "http://127.0.0.1/*"
      ],
      "js": [
        "content/all-in-one-coach.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "options_page": "options/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "components/*.js",
        "styles/*.css",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
